<Window x:Class="EyeFixationDrawer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeFixationDrawer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Margin="0" Name="canvas">
            <Button x:Name="button1" Content="SaveData" Canvas.Left="10" Canvas.Top="59" Width="75" Click="button1_Click"/>
            <Button x:Name="button2" Content="Stop" Canvas.Left="10" Canvas.Top="34" Width="75" Click="button2_Click"/>
            <Button x:Name="button3" Content="Draw Fixations" Canvas.Left="10" Canvas.Top="84" Width="100" Click="button3_Click"/>
            <Slider x:Name="slider1" Canvas.Left="10" Canvas.Top="140" Width="149" ValueChanged="slider1_ValueChanged" Maximum="1"/>
            <Slider x:Name="slider2" Canvas.Left="10" Canvas.Top="188" Width="149" Maximum="1" ValueChanged="slider2_ValueChanged"/>
            <Slider x:Name="slider3" Canvas.Left="10" Canvas.Top="233" Width="149" Maximum="1" ValueChanged="slider3_ValueChanged"/>
            <Label x:Name="label" Content="Window Size" Canvas.Left="10" Canvas.Top="114"/>
            <Label x:Name="label1" Content="Peak Threshold" Canvas.Left="10" Canvas.Top="162"/>
            <Label x:Name="label2" Content="Radius" Canvas.Left="10" Canvas.Top="207"/>
            <Button x:Name="button4" Content="Clear Fixations" Canvas.Left="121" Canvas.Top="84" Width="75" Click="button4_Click"/>
        </Canvas>
        <Button x:Name="button" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
